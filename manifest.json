{
  "manifest_version": 3,
  "name": "Security Assurance Assistant",
  "description": "Send highlighted text and display the response.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "send-selected-text-to-zeta": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Send selected text"
    }
  }
}
