{
  "manifest_version": 3,
  "name": "AI Assistant Chrome Extension",
  "description": "Send selected text to an AI API and display the response.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "contextMenus", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "commands": {
    "send-selected-text-to-ai": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Send selected text"
    }
  }
}
